<?xml version='1.0' ?>

<launch>
  <arg name="server_uri" default="" description="The URI of the api server to transmit state and task information."/>
  <arg name="headless" default="false" description="Run the simulation in headless mode."/>

  <include file="$(find-pkg-share free_fleet_examples)/include/rmf_common.launch.xml">
    <arg name="use_sim_time" value="false"/>
    <arg name="config_file" value="$(find-pkg-share free_fleet_examples)/zc/map.building.yaml"/>
    <arg name="server_uri" value="$(var server_uri)"/>
    <arg name="headless" value="$(var headless)"/>
  </include>
    <node pkg="zc_door_adapter"
        exec="zc_door_adapter"
        args="-c /data/ws_free_fleet/src/door_adapter_template/config.yaml"
        output="both">

  </node>
</launch>
