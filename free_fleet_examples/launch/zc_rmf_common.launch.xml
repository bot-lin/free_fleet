<?xml version='1.0' ?>

<launch>
  <arg name="server_uri" default="" description="The URI of the api server to transmit state and task information."/>

  <include file="$(find-pkg-share free_fleet_examples)/include/rmf_common.launch.xml">
    <arg name="use_sim_time" value="false"/>
    <arg name="config_file" value="/data/maps/zc/map.building.yaml"/>
    <arg name="server_uri" value="$(var server_uri)"/>
    <arg name="headless" value="false"/>
  </include>

  <node pkg="rmf_web_viz" exec="web_viz" output="both"/>
  <node pkg="zc_door_adapter"
        exec="zc_door_adapter"
        args="-c /data/params/door_config.yaml"
        output="both">
  </node>
</launch>
